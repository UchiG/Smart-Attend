<head>
    <title>Login Page</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartAttendWeb</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <link href="c:\users\uchir\.nuget\packages\bootstrap\5.3.2\contentfiles\any\any\wwwroot\css\bootstrap.min.css"
          rel="stylesheet" />
    <script src="c:\users\uchir\.nuget\packages\bootstrap\5.3.2\contentfiles\any\any\wwwroot\js\bootstrap.min.js"></script>
    <script src="c:\users\uchir\.nuget\packages\bootstrap\5.3.2\contentfiles\any\any\wwwroot\js\bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


    <link rel="stylesheet" href="../styles/addModules.css" type="text/css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">


    <style>
        .nav-link {
            color: black !important; /* Use !important to override other styles */
        }
    </style>

    <img src="~/resources/blueTop.svg" alt="Blue Wave" id="blue-wave" />

</head>
<body>
    <div class="container">
        <div class="row justify-content-center align-items-center" style="height: 100vh;">
            <div class="col-md-4">
                <h1 class="text-center">Log In</h1>
                <form>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-at"></i></span>
                            </div>
                            <input type="text" class="form-control" placeholder="ID">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            </div>
                            <input type="password" class="form-control" placeholder="Password">
                            <div class="input-group-append">
                                <span class="input-group-text" id="showPassword" style="cursor: pointer;"><i class="fas fa-eye"></i></span>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block mt-5">Sign In</button>
                </form>
                <p class="text-center mt-3">Don't have an account? <a href="/SignUp" style="color: #0099ff;">Sign up</a></p>
            </div>
        </div>
    </div>

    <!-- Include Bootstrap and Font Awesome libraries -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</body>
