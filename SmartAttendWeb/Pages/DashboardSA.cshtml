            <p class="text-left">Assign Lecturers <i class="fas fa-external-link-alt external-link-icon"><a href="/AssignLecturers"></a></i></p>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-12 blue-rectangle medium-blue rounded">
            <p class="text-left">Assign Students <i class="fas fa-external-link-alt external-link-icon"><a href="/AssignStudents"></a></i></p>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-12 blue-rectangle dark-blue rounded">
            <p class="text-left">Add Modules <i class="fas fa-external-link-alt external-link-icon"><a href="/AddModules"></a></i></p>
        </div>
    </div>
