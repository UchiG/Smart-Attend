@page
@model SmartAttendWeb.Pages.DashboardSAModel
@{

    Layout = "_AttendSALayout"; // Set the layout to a different layout file

}

<style>
    .blue-heading {
        color: blue;
    }

    .grey-rectangle {
        background-color: grey;
        text-align: center;
        padding: 10px;
        margin: 5px;
        display: inline-block;
    }

    .blue-rectangles {
        display: flex;
        justify-content: space-between;
    }

    .blue-rectangle {
        padding: 20px;
        text-align: left;
        color: white;
        position: relative;
    }

    .light-blue {
        background-color: #00bfff;
    }

    .medium-blue {
        background-color: #0074b6;
    }

    .dark-blue {
        background-color: #001f3f;
    }

    .external-link-icon {
        position: absolute;
        top: 0;
        right: 0;
        padding: 5px;
    }

        .external-link-icon a {
            color: white;
            text-decoration: none;
        }
</style>

<div class="container">
    <h1 class="blue-heading">System Admin Dashboard</h1>

    <div class="row">
        <div class="col-md-3 grey-rectangle">
