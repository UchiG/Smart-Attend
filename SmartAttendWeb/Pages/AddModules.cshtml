@page
@model SmartAttendWeb.Pages.AddModulesModel
@{

    Layout = "_AttendSALayout"; // Set the layout to a different layout file

}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="globals.css" />
    <link rel="stylesheet" href="../styles/addModules.css" />

    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="content-container">
        <div class="header">
            <div class="site-title">SmartAttend</div>
        </div>
        <div class="menu">
            <div class="breadcrumb">
                <div class="breadcrumb-text">Home / Add Modules</div>
            </div>
            <div class="user-info">
                <div class="user-name">Module</div>
            </div>
        </div>

        <!-- Add Modules Section -->
        <div class="add-modules-section">
            <h1 class="mt-4">Add Modules</h1>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="firstName">First Name</label>
                        <input type="text" class="form-control" id="firstName" placeholder="First Name">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class "form-group">
                        <label for="lastName">Last Name</label>
                        <input type="text" class="form-control" id="lastName" placeholder="Last Name">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="lecturerID">Lecturer ID</label>
                        <input type="text" class="form-control" id="lecturerID" placeholder="Lecturer ID">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="moduleCode">Module Code</label>
                        <input type="text" class="form-control" id="moduleCode" placeholder="Module Code">
                    </div>
                </div>
            </div>
            <button class="btn btn-primary action-button delete-button">Delete</button>
            <button class="btn btn-secondary action-button update-button">Update</button>
            <button class="btn btn-danger action-button add-button">Add</button>
        </div>

        <!-- Navigation and other content here -->
    </div>

    <!-- Include Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
